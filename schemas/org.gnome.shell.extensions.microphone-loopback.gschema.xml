<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="microphone-loopback@atareao.es">
    <schema path="/org/gnome/shell/extensions/microphone-loopback/" id="org.gnome.shell.extensions.microphone-loopback">
        <key name="latency" type="i" >
            <default>1</default>
            <summary>Latency in milliseconds</summary>
            <description>Set the latency for microphone loopback</description>
        </key>
        <key name="notifications" type="b">
            <default>false</default>
            <summary>Show notifications</summary>
            <description>On enable show notifications when enable or disable loopback for the microphone</description>
        </key>
        <key name="darktheme" type="b">
            <default>false</default>
            <summary>Dark theme</summary>
            <description>Enable dark theme otherwise light theme</description>
        </key>
    </schema>
</schemalist>
